    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch MyAI AppHost",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/MyAI.AppHost/bin/Debug/net8.0/MyAI.AppHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/MyAI.AppHost",
            "stopAtEntry": false,
            "preLaunchTask": "dotnet: build",
            "launchSettingsProfile": "https",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            }
        }
    ]
}